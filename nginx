FROM ubuntu:22.04

LABEL autor=anpm006
LABEL platform=github
LABEL descriprion="This container install nginx, remove apt cache, make /var/www/html as a workdir and copy files/index.html to a current directory"

RUN apt-get update
RUN apt-get install nginx -y
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /var/www/html/

COPY files/index.html .


ENV OWNER=anpm006
ENV TYPE=prod

EXPOSE 80
EXPOSE 443/tcp
CMD ["nginx", "-g", "daemon off;"]
